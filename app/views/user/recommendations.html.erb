<% @games.each do |game| %>
  <div class="row">
    <div class="media">
      <div class="media-left">
        <a href="<%= "http://store.steampowered.com/app/#{game['appid']}"%>">
          <img class="media-object" src="<%="https://steamcdn-a.akamaihd.net/steamcommunity/public/images/apps/#{game['appid']}/#{game['img_logo_url']}.jpg" %>" alt="game logo">
        </a>
      </div>
      <div class="media-body">
        <h4 class="media-heading"><%= game['name'] %></h4>
      </div>
    </div>
  </div>
<% end %>
